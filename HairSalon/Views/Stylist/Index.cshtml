@using HairSalon.Models;

<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>List of Stylists</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel="stylesheet" href="~/css/styles.css">
</head>
<body class="container">
  <h1>Pick a stylist to see a list of their clients</h1>
  <ul>
    @if (Model.Count == 0)
    {
      <p>There are no stylists in your list yet!</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (Stylist stylist in Model)
      {

        <li><a href='/stylist/@stylist.Id'>@stylist.Name</a></li>
      }
    }
  </ul>

  <a href="/stylist/new" class="btn btn-dark">Add a new stylist to the list</a>
  <a href="/" class="btn btn-primary">Return to homepage</a>
  <a href="/stylist/delete" class="btn btn-danger">Delete all stylists and their clients</a>
</body>
</html>

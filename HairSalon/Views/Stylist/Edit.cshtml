@using HairSalon.Models;
@using System.Collections.Generic;

<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Edit stylist details</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel="stylesheet" href="~/css/styles.css">
</head>

<body class="container">
  <h1>Hair salon</h1>

  <h2>Edit client: @Model.Name</h2>

  <form action="/stylist/@Model.Id" method="post">
    <label for="newName">Name:</label>
    <input type="text" name="newName" placeholder="@Model.Name" required><br>
    <button type="submit">Edit</button>
  </form>

  <h4><a href="/stylist/@Model.Id/" class="btn btn-dark">Return to previous page</a></h4>
</body>
</html>

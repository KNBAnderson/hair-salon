@using HairSalon.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>View Clien Details</title>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body class="container">
    <h1>@Model["client"].Name's details:</h1>

    <ul>

        <li>@Model["client"].Name's next appointment is on @Model["client"].NextAppointment with @Model["stylist"].Name.</li>
    </ul>

    <a href="/stylist/@Model["stylist"].Id/client" class="btn btn-dark">Return to @Model["stylist"].Name's client list</a>
    <a href="/stylist" class="btn btn-dark">Return to list of stylists</a>
    </html>
  </body>
